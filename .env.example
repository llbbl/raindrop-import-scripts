# Example .env file for raindrop-import-scripts
# Copy this file to .env and modify as needed

# Global settings
RAINDROP_LOG_FILE=raindrop_import.log
RAINDROP_DRY_RUN=false

# Raindrop API settings
# OAuth authentication (recommended)
RAINDROP_CLIENT_ID=your_client_id_here
RAINDROP_CLIENT_SECRET=your_client_secret_here
# API token authentication (deprecated)
RAINDROP_API_TOKEN=your_api_token_here
# Other settings
RAINDROP_COLLECTION_ID=0
RAINDROP_BATCH_SIZE=50

# Pocket settings
RAINDROP_POCKET_INPUT_FILE=pocket_export.html
RAINDROP_POCKET_OUTPUT_FILE=pocket.csv

# Evernote settings
RAINDROP_EVERNOTE_INPUT_FILE=evernote_export.enex
RAINDROP_EVERNOTE_OUTPUT_FILE=evernote.csv
RAINDROP_EVERNOTE_USE_MARKDOWN=true

# Chrome settings
RAINDROP_CHROME_INPUT_FILE=chrome_bookmarks.json
RAINDROP_CHROME_OUTPUT_FILE=chrome.csv

# Firefox settings
RAINDROP_FIREFOX_INPUT_FILE=firefox_bookmarks.json
RAINDROP_FIREFOX_OUTPUT_FILE=firefox.csv
